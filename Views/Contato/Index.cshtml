@using Projetos.CrudMvc.Models;
@using Microsoft.EntityFrameworkCore.Metadata.Internal;
@model List<ContatoModel>;
@{
    ViewData["Title"] = "Listagem de Contatos";
}

<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Contato" asp-action="Criar">Adicionar Novo Contato</a>
    </div>
    <br>


    <h1>Listagem de contatos</h1>

    <table class="table" id="table-contatos">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Celular</th>
                <th scope="col">Bot√µes</th>
            </tr>
        </thead>

        <tbody>
            @if (Model != null && Model.Any()){
                int cont = 0;
                foreach (ContatoModel contato in Model)
                {
                    cont ++; 
                    <tr>
                    <th scope="row">@cont</th>
                    <td>@contato.Nome</td>
                    <td>@contato.Email</td>
                    <td>@contato.Celular</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a class="btn btn-primary" role="button" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="Editar">Editar</a>
                            <a class="btn btn-danger" role="button" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="ApagarConfirmacao">Excluir</a>
                        </div>
                    </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
