@using Projetos.CrudMvc.Models;
@model ContatoModel;
@{
    ViewData["Title"] = "Editar Contato";
}

<div class="text-center">

    <h1>Editar Contato</h1>

    <form asp-controller="Contato" asp-action="Alterar" method="post">

        <input type="hidden" asp-for="Id" />
         <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do contato">
        </div>
        
        <div class="form-group">
            <label for="Email">E-mail</label>
            <input type="text" asp-for="Email"class="form-control" placeholder="Digite o e-mail do contato">
        </div>

        <div class="form-group">
            <label for="Celular">Celular</label>
            <input type="text" asp-for="Celular"class="form-control celular" placeholder="Digite o celular do contato">
        </div>
        
        <button type="submit" class="btn btn-primary mt-2">Alterar</button>
        <a class="btn btn-secondary mt-2" asp-controller="Contato" asp-action="Index" role="button">Voltar</a> 

    </form>

</div>
