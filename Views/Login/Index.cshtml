@using Projetos.CrudMvc.Models
@model LoginModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}

<form asp-controller="Login" asp-action="Entrar" method="post">
  <div class="form-group">
    <label for="exampleInputEmail1">Login</label>
    <input type="text" asp-for="Login" class="form-control" id="Login"  placeholder="Enter email">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Senha</label>
    <input type="password" asp-for="Senha" class="form-control" id="Senha" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-primary m-3">Entrar</button>
</form>   
